/* pages/category/index.wxss */
.caregory{
  display: flex;
  flex-direction: row;
  height: 100%;
}
.nav_left{
  background: #f8f8f8;
  width: 24%;
  height: 100%;
  white-space: nowrap;
}
.nav_right{
  background: #fff;
  width: 76%;
  height: 100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.nav_left_items{
  font-size: 28rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.nav_left_item-active{
  background-color: #fff;
  color: #ff751d;
}
.jd-category{
  margin: 40rpx 16rpx 0;
}
.jd-category-wrap{
  overflow: hidden;
  padding: 20rpx 20rpx 0;
}
.jd-category .title{
  font-size: 28rpx;
  height: 60rpx;
  line-height: 30rpx;
  font-weight: 700;
  color: #080808
}
.jd-category-style{
  width: 32.8%;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list_img{
  width: 150rpx;
  height: 150rpx;
}
.list_text{
  text-align: center;
  font-size: 24rpx;
  color: #686868;
  margin-top: 10rpx;
  height: 70rpx;
}
/* 总部样式 */
.hq{
  width:100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-bottom: 40rpx;
}
.city{
  font-size: 30rpx;
  line-height: 30rpx;
  margin-top:30rpx;
}
.city_box{
  margin-top: 20rpx;
  width: 500rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx 15rpx;
  border: 2rpx solid #D8D8D8;
}
.city_bg{
  width: 485rpx;
  margin-bottom: 20rpx;
}
.c_t{
  font-size: 24rpx;
  line-height: 30rpx;
  text-indent: 30rpx;
}
.tit_box{
  width: 530rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  margin-top:20rpx;
}
.tit{
  display: block;
  padding:15rpx;
  color: #fff;
  background-color: #ff751d;
  text-align: center;
  width: 180rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  z-index: 2;
}
.lheight{
  position: absolute;
  top:50%;
  width: 100%;
  height: 2rpx;
  left:0;
  margin-top:-1rpx;
  background-color: #ff751d;
  z-index: 1;
}
.dw{
  border: 2rpx solid #ff751d;
  padding: 25rpx 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}
.dwxj{
  width: 225rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  margin:10rpx 13rpx;
}
.dw_img{
  width:100%;
}
.dw_tt{
  display: block;
  width: 100%;
  height: 40rpx;
  background-color: #ff751d;
  color:#fff;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
}
.lc{
  width:30rpx;
  height:3rpx;
  background-color:#ff751d;
  margin-top:10rpx;
}