/* pages/luoyan/index.wxss */
.luoyan{
  background-color: #fff;
  width:100%;
  height:auto;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: flex-start;
}
.img_ly{
  width:100%;
}
.con_box{
  width:90%;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.ly_text{
  font-size:34rpx;
  line-height: 34rpx;
  color:#333;
  margin-top:30rpx;
}
.lc{
  width:30rpx;
  height:3rpx;
  background-color:#ff751d;
  margin:20rpx 0;
}
.ly_ad,.ly_ys{
  width:100%;
  height:auto;
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top:10rpx;
  margin-bottom:20rpx;
}

.ad_box{
  width:170rpx;
  height:250rpx;
  align-items: center;
  display:flex;
  flex-direction: column;
}
.ad_img{
  width:170rpx;
}
.ad_t{
  margin-top:20rpx;
  font-size:24rpx;
  line-height:30rpx;
  text-align: center;
}
.rq_box{
  width:100%;
  height:auto;
  display:flex;
  flex-direction: row;
  align-items:center;
  justify-content:space-between;
  margin-top:10rpx;
  margin-bottom: 20rpx;
}
.rq_lt{
  width:298rpx;
  height:440rpx;
  display:flex;
  flex-direction:column;
  align-items: center;
}
.rq_rt{
  width:360rpx;
  height:440rpx;
  display:flex;
  flex-direction:column;
  align-items: center;
}
.img_box_lt{
  margin: 20rpx 0;
  width:290rpx;
  height:300rpx;
  display:flex;
  flex-direction: column-reverse;
}
.img_box_rt{
  margin: 20rpx 0;
  width:360rpx;
  height:300rpx;
  display:flex;
  flex-direction: column-reverse;
}
.rq_img{
  width:100%;
}
.title{
  font-size: 30rpx;
  line-height: 30rpx;
  text-align: center;
}
.rq_t{
  font-size: 24rpx;
  line-height:30rpx;
  box-sizing: border-box;
  padding: 0 10rpx 0 10rpx;
}
.ys_box{
  width:200rpx;
  height:350rpx;
  align-items: center;
  display:flex;
  flex-direction: column;
}
.ys_i_b{
  width:100%;
  height:220rpx;
  position: relative;
}
.ys_i_t{
  position: absolute;
  top:50%;
  left:50%;
  margin-top:-10rpx;
  margin-left:-55rpx;
  color:#fff;
  font-size:30rpx;
  line-height: 30rpx;
  text-align: center;
}
.ys_img{
  width:100%;
}
.ys_t{
  margin-top:20rpx;
  font-size:24rpx;
  line-height:30rpx;
  box-sizing: border-box;
  padding:0 5rpx;
}
