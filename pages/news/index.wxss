/* pages/news/index.wxss */

.new_box{
  width:100%;
  /* height:100%; */
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: center;
}
.new_i{
  width:100%;
  height:280rpx;
  margin:0 auto;
}

.new_tit{
  width:95%;
  height:60rpx;
  border-bottom:2rpx solid #FF6F0F;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}
.new_tit .tit_n{
  font-size: 24rpx;
  line-height:60rpx;
  color:#333;
}
.list{
  width:100%;
  height:auto;
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
  justify-content: center;
}
.pro{
  width:95%;
  height:140rpx;
  display:flex;
  flex-direction:row ;
  justify-content:flex-start;
  align-items: center;
  margin-top:10rpx;
  border-bottom:1rpx dashed #ccc;
}
.pro .new_img{
  width:140rpx;
  height:100rpx;
  margin-right:10rpx;
}
.pro .text{
  box-sizing:border-box;
  padding:0 5rpx;
  width:480rpx;
  height:140rpx;
  margin-right:10rpx;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items:flex-start;
}
.pro .yad{
  width:72.5rpx;
  height:100rpx;
}
.text .text_tit{
  display:block;
  font-size:24rpx;
  line-height:24rpx;
  height:24rpx;
  width:450rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text .text_con{
  margin-top:6rpx;
  display:block;
  font-size:20rpx;
  line-height:26rpx;
  text-indent: 26rpx;
  height:78rpx;
  text-overflow:ellipsis; 
  overflow: hidden;
}
.yad{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:flex-end;
}
.yad .date{
  font-size:26rpx;
  line-height:26rpx;
}
.yad .year{
  font-size:30rpx;
  line-height:30rpx;
}
.yad .line{
  width:20rpx;
  height:5rpx;
  background-color:#FF6F0F;
  margin:10rpx 0;
}
.new_tit .new_icon{
  width:30rpx;
  height:30rpx;
  margin-right:10rpx;
}
/* demo */
